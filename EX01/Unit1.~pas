unit Unit1;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;

type
    // Objetos
    TFrm1 = class(TForm)
    btnMensagem: TButton;
    btnAlterar: TButton;
    lblMensagem: TLabel;

    // Procedimentos
    procedure btnMensagemClick(Sender: TObject);
    procedure btnAlterarClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

// VARIÁVEIS GLOBAIS
var
  Frm1: TFrm1;

implementation

{$R *.dfm}

//////////////////// BOTAO MENSAGEM ////////////////////
procedure TFrm1.btnMensagemClick(Sender: TObject);

// Processamento
begin
  { Colocar Mensagem no Label, Obs: #13 = Concatenação }
  lblMensagem.Caption := 'Leandro você tem médico' + #13 + 'Dia: Sexta-Feira,19' + #13 + 'Horário: 10:00 H';
end;

//////////////////// BOTÃO ALTERAR ////////////////////
procedure TFrm1.btnAlterarClick(Sender: TObject);

// Processamento
begin
  lblMensagem.Font.Color:= clRed;// A mensagem adquiri cor vermelha
  lblMensagem.Font.Style:= [fsBold];// A mensagem fica em negrito
  lblMensagem.Alignment:= taCenter;// A mensagem fica alinhada no centro
  lblMensagem.Font.Size:= 10;// A mensagem fica com tamanho 10
end;

end.
